{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "jsx": "preserve",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowJs": true,
        "noEmit": true,
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.js"
    ]
}