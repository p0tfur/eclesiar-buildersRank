{
  "name": "ver-root",
  "private": true,
  "workspaces": [
    "packages/api",
    "packages/web"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:api dev:web",
    "dev:api": "npm --prefix packages/api run dev",
    "dev:web": "npm --prefix packages/web run dev",
    "build": "npm-run-all build:api build:web",
    "build:api": "npm --prefix packages/api run build",
    "build:web": "npm --prefix packages/web run build"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "npm-run-all": "^4.1.5"
  }
}
